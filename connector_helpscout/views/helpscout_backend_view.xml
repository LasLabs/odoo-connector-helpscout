<odoo>

    <record id="helpscout_backend_form" model="ir.ui.view">
        <field name="name">helpscout.backend.form</field>
        <field name="model">helpscout.backend</field>
        <field name="arch" type="xml">
            <form string="HelpScout Backend">

                <header />

                <sheet>

                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>

                    <group name="group_helpscout"
                           string="HelpScout Configuration">
                        <group>
                            <field name="api_key" password="1" />
                        </group>
                        <group>
                            <field name="company_id" />
                            <field name="is_default_export" />
                            <field name="web_hook_id"
                                   domain="[('interface_type', '=', 'helpscout.web.hook')]"
                                   context="{'default_backend_id': id,
                                             'default_interface_type': 'helpscout.web.hook',
                                             'default_token_type': 'helpscout.web.hook.token',
                                             'default_name': name,
                                             }" />
                        </group>
                    </group>

                    <notebook>

                        <page name="page_imports" string="Imports">
                            <group name="group_import_customers">
                                <div>
                                    <label for="import_customers_from_date"
                                           string="Import Customers From"
                                           class="oe_inline" />
                                    <field name="import_customers_from_date"
                                           class="oe_inline"
                                           nolabel="1" />
                                </div>
                                <button name="action_import_customers"
                                        type="object"
                                        class="oe_highlight"
                                        string="Queue Import" />
                            </group>
                            <group name="group_import_mailboxes">
                                <div>
                                    <label for="import_mailboxes_from_date"
                                           string="Import Mailboxes From"
                                           class="oe_inline" />
                                    <field name="import_mailboxes_from_date"
                                           class="oe_inline"
                                           nolabel="1" />
                                </div>
                                <button name="action_import_mailboxes"
                                        type="object"
                                        class="oe_highlight"
                                        string="Queue Import" />
                            </group>
                            <group name="group_import_users">
                                <div>
                                    <label for="import_users_from_date"
                                           string="Import Users From"
                                           class="oe_inline" />
                                    <field name="import_users_from_date"
                                           class="oe_inline"
                                           nolabel="1" />
                                </div>
                                <button name="action_import_users"
                                        type="object"
                                        class="oe_highlight"
                                        string="Queue Import" />
                            </group>
                        </page>
                        <page name="page_settings" string="Settings">
                            <group name="group_users" string="Users">
                                <field name="user_match_field" />
                            </group>
                        </page>
                    </notebook>

                </sheet>

            </form>
        </field>
    </record>

    <record id="helpscout_backend_tree" model="ir.ui.view">
        <field name="name">helpscout.backend.tree</field>
        <field name="model">helpscout.backend</field>
        <field name="arch" type="xml">
            <tree string="HelpScout Backends">
                <field name="company_id" />
                <field name="is_default_export" />
            </tree>
        </field>
    </record>

    <record id="helpscout_backend_action" model="ir.actions.act_window">
        <field name="name">HelpScout Backends</field>
        <field name="res_model">helpscout.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
